import time
import winsound

def beep_every_hour():
    while True:
        # Beep sound (frequency 1000 Hz, duration 1000 ms or 1 second)
        winsound.Beep(1000, 1000)
        print("Beep! Waiting for one hour...")
        # Wait for one hour (3600 seconds)
        time.sleep(3600)

if __name__ == "__main__":
    beep_every_hour()
